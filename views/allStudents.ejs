<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <%- include('partials/nav.ejs') %>

    <% if (students) { %>
     <div class="d-flex mt-4 gap-2 flex-wrap">
      <% students.forEach((student, index) => { %>
      <div class="card p-3 border-2 border-primary">
        <h3>Name: <%=student.firstName %> <%= student.lastName %></h3>
        <h3><%= student._id %></h3>
        <h3>Course: <%= student.course %></h3>
        <h3>Email: <%= student.email %></h3>

        <div>
          <form action="/edit/<%= student._id %>" method="get">
            <button class="btn btn-primary rounded-pill py-2 px-5">edit</button>
          </form>

          <form action="/delete/<%= student._id %>" method="post">
            <button type="submit" class="btn btn-danger rounded-pill py-2 px-5">
              delete
            </button>
          </form>
        </div>
      </div>
      <% }) %>

      <a href="/addStudent">Add more student</a>
    </div>
    <% }else{ %>
        <h1>No students available</h1>
        <a href="/addStudent">Add more student</a>
      <% } %>
  </body>
</html>
